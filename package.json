{
	"name": "ci-monitor",
	"private": true,
	"version": "0.0.17",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 4573",
		"dev:all": "concurrently \"npm run dev\" \"npm run pocketbase\"",
		"pocketbase": "pocketbase serve --http=127.0.0.1:4617 --dir=./data/pb_data",
		"pocketbase:admin": "echo 'PocketBase Admin: http://127.0.0.1:4617/_/'",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"lint:fix": "prettier --write .",
		"ports": "lsof -i -P -n 2>/dev/null | grep LISTEN | awk '{print $1, $9}' | sort -t: -k2 -n | uniq",
		"ports:kill": "lsof -ti:4573,:4617 2>/dev/null | xargs kill -9 2>/dev/null || echo 'Ports already free'",
		"get-it-live": "node scripts/get-it-live.js",
		"version:patch": "npm version patch --no-git-tag-version"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.0.3",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"@lucide/svelte": "^0.562.0"
	}
}
